<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme.CryptoCompose" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.CryptoCompose.NoActionBar" parent="AppTheme.CryptoCompose">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="AppTheme.CryptoCompose.NoActionBar2" parent="AppTheme.CryptoCompose">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.CryptoCompose.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CryptoCompose.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.splash" parent="AppTheme.CryptoCompose.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="AppTheme.CryptoCompose.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.CryptoCompose.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.splash.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.splash.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.splash.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>